<Window x:Class="ZooAdminApp.Views.MedicalRecordsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Orvosi bejegyzések"
        Height="560" Width="880"
        WindowStartupLocation="CenterScreen">
    <DockPanel Margin="12">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
            <ComboBox x:Name="AnimalCombo" Width="280" DisplayMemberPath="Name" SelectedValuePath="Id" />
            <Button Content="Betöltés" Width="100" Margin="8,0,0,0" Click="Load_Click"/>
            <Button x:Name="AddBtn" Content="Új bejegyzés" Width="120" Margin="8,0,0,0" Click="Add_Click"/>
        </StackPanel>

        <DataGrid x:Name="Grid" AutoGenerateColumns="False" IsReadOnly="True" MouseDoubleClick="Grid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                <DataGridTextColumn Header="Dátum" Binding="{Binding CreatedAt}" Width="160"/>
                <DataGridTextColumn Header="Állatorvos" Binding="{Binding Vet.Name}" Width="180"/>
                <DataGridTextColumn Header="Leírás" Binding="{Binding Description}" Width="280"/>
                <DataGridTextColumn Header="Súly" Binding="{Binding Weight}" Width="80"/>
                <DataGridTextColumn Header="Kifutó" Binding="{Binding Enclosure}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>