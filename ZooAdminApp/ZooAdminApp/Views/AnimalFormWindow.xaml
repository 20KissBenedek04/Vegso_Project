<Window x:Class="ZooAdminApp.Views.AnimalFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Állat adatlap"
        Height="620" Width="520"
        WindowStartupLocation="CenterScreen">
    <ScrollViewer Margin="16">
        <StackPanel>
            <TextBlock Text="Állat adatok" FontSize="18" FontWeight="Bold" Margin="0,0,0,12"/>
            <StackPanel>
                <Label Content="Név"/>
                <TextBox x:Name="NameBox" Height="28"/>

                <Label Content="Faj"/>
                <ComboBox x:Name="SpeciesCombo" Height="28" DisplayMemberPath="LatinName" SelectedValuePath="Id"/>

                <Label Content="Típus"/>
                <ComboBox x:Name="TypeCombo" Height="28" DisplayMemberPath="Name" SelectedValuePath="Id"/>

                <Label Content="Születési dátum (YYYY-MM-DD)"/>
                <TextBox x:Name="BirthBox" Height="28"/>

                <Label Content="Súly (kg)"/>
                <TextBox x:Name="WeightBox" Height="28"/>

                <Label Content="Kifutó"/>
                <ComboBox x:Name="EnclosureCombo" Height="28" DisplayMemberPath="Name" SelectedValuePath="Id"/>

                <Label Content="Kép URL"/>
                <TextBox x:Name="ImageBox" Height="28"/>

                <CheckBox x:Name="ActiveBox" Content="Aktív" Margin="0,10,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                <Button Content="Mentés" Width="120" Height="36" Click="Save_Click"/>
                <Button Content="Mégse" Width="100" Height="36" Margin="8,0,0,0" Click="Cancel_Click"/>
            </StackPanel>

            <TextBlock x:Name="InfoText" Foreground="Gray" Margin="0,12,0,0" TextWrapping="Wrap"/>
        </StackPanel>
    </ScrollViewer>
</Window>