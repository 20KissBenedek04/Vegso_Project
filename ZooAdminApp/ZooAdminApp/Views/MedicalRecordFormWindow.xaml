<Window x:Class="ZooAdminApp.Views.MedicalRecordFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Orvosi bejegyzés"
        Height="471" Width="588"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="16">
        <Label Content="Leírás"/>
        <TextBox x:Name="DescBox" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>

        <Label Content="Új súly (kg, opcionális)" Margin="0,10,0,0"/>
        <TextBox x:Name="WeightBox" Height="28"/>

        <Label Content="Új kifutó (opcionális)"/>
        <ComboBox x:Name="EnclosureCombo" Height="28" DisplayMemberPath="Name" SelectedValuePath="Id"/>

        <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
            <Button Content="Mentés" Width="120" Height="36" Click="Save_Click"/>
            <Button Content="Mégse" Width="100" Height="36" Margin="8,0,0,0" Click="Cancel_Click"/>
        </StackPanel>

        <TextBlock x:Name="InfoText" Foreground="Gray" Margin="0,12,0,0"/>
    </StackPanel>
</Window>