<Window x:Class="ZooAdminApp.Views.UsersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Új felhasználó (admin)"
        Height="420" Width="420"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Új felhasználó létrehozása"
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,12"/>

        <StackPanel Grid.Row="1" >
            <Label Content="Név"/>
            <TextBox x:Name="NameBox" Height="28"/>

            <Label Content="Email" Margin="0,8,0,0"/>
            <TextBox x:Name="EmailBox" Height="28"/>

            <Label Content="Jelszó" Margin="0,8,0,0"/>
            <PasswordBox x:Name="PasswordBox" Height="28"/>

            <Label Content="Szerepkör" Margin="0,8,0,0"/>
            <ComboBox x:Name="RoleCombo" Height="28">
                <!-- Backend alapján csak worker vagy vet engedett -->
                <ComboBoxItem Content="Dolgozó (worker)" Tag="worker"/>
                <ComboBoxItem Content="Állatorvos (vet)" Tag="vet"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,16,0,0">
            <Button Content="Létrehozás" Width="120" Height="34" Click="Create_Click"/>
            <Button Content="Mégse" Width="100" Height="34" Margin="8,0,0,0" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>